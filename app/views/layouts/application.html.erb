<!DOCTYPE html>
<html>
  <head>
    <title>Newsjams</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">

  <nav>
        <%= link_to 'Home', root_path %>
        <%= link_to 'Resources', resources_path %>
        <% if @current_admin.present? %>
          <%= link_to "New resource", new_resource_path %><!-- Security through obscurity -->
          <%= link_to "Log out #{ @current_admin.email }", login_path, :method => 'delete' %>
        <% else %>
          <%= link_to 'Sign up', new_admin_path %>
          <%= link_to 'Login', login_path %>
        <% end %>

  </nav>
    <%= yield %>
  </body>
</html>
